aws_region   = "ap-northeast-1"
project_name = "copilot-metrics-viewer"
image_tag    = "latest"

# GitHub Actions settings
github_repository = "your-org/copilot-metrics-viewer-lambda"

# ECR lifecycle policy settings
ecr_lifecycle_untagged_count = 3

# CloudWatch Logs retention (days)
# Options: 1, 3, 5, 7, 14, 30, 60, 90, 120, 150, 180, 365, 400, 545, 731, 1827, 3653
cloudwatch_logs_retention_days = 7

# CloudFront and WAF settings (optional)
enable_cloudfront = false
enable_waf        = false  # Requires enable_cloudfront = true
use_iam_auth      = false  # Requires enable_cloudfront = true
# allowed_ip_addresses = ["203.0.113.0/24", "198.51.100.0/24"]  # Your office/VPN IPs (GitHub IPs included automatically)

# GitHub IP ranges (automatically included in WAF for OAuth)
# Update these if GitHub changes their IP ranges
# github_ip_ranges = [
#   "140.82.112.0/20",
#   "143.55.64.0/20", 
#   "185.199.108.0/22",
#   "192.30.252.0/22",
#   # ... (see variables.tf for complete list)
# ]

environment_variables = {
  # Required
  NUXT_SESSION_PASSWORD  = "your-32-character-or-longer-password-here"

  # GitHub Token (Required if not using GitHub App Auth)
  NUXT_GITHUB_TOKEN      = "ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

  # GitHub App Authentication (Optional - alternative to NUXT_GITHUB_TOKEN)
  NUXT_PUBLIC_USING_GITHUB_AUTH = "true"
  NUXT_OAUTH_GITHUB_CLIENT_ID     = "Iv1.xxxxxxxxxxxx"
  NUXT_OAUTH_GITHUB_CLIENT_SECRET = "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
  # NUXT_OAUTH_GITHUB_CLIENT_SCOPE = "copilot,manage_billing:copilot,manage_billing:enterprise,read:enterprise,read:org"  # for OAuth App

  # Scope configuration (choose one)
  NUXT_PUBLIC_SCOPE      = "organization"  # or "enterprise" or "team-organization" or "team-enterprise"
  NUXT_PUBLIC_GITHUB_ORG = "your-org-name"
  # NUXT_PUBLIC_GITHUB_ENT = "your-enterprise-name"  # if using enterprise scope
  # NUXT_PUBLIC_GITHUB_TEAM = "your-team-slug"       # if using team scope

  # Optional
  # NUXT_PUBLIC_IS_DATA_MOCKED = "false"
  # HTTP_PROXY = "http://proxy.example.com:8080"
  # CUSTOM_CA_PATH = "/path/to/ca-cert.pem"
}
